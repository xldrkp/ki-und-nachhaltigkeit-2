---
import Container from '@components/container.astro';
import { getCollection, getEntry } from 'astro:content';

import SDG_Card from '../components/SDG_Card.astro';

const sdgs = await getCollection('SDGs');
---

<Container class="px-0">
  <div class="mt-2 grid grid-cols-1 sm:grid-cols-3 md:grid-cols-7 gap-4">
    {sdgs.map((sdg) => <SDG_Card sdg={sdg} />)}
  </div>
</Container>
