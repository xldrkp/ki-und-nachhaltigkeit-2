---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Kollaborative Literatursammlung",
    description:
      "Finde und ergänze wissenschaftliche und journalistische Veröffentlichungen in der Literatursammlung auf Zotero Online.",
    icon: "bx:bxs-book",
  },
  {
    title: "SDG-KI-Explorer",
    description:
      "Reflektiere die aktuelle Entwicklung von KI an den 17 Nachhaltigkeitszielen der Vereinten Nationen.",
    icon: "bx:bxs-file-find",
  },
  {
    title: "Austausch und Diskussion",
    description:
      "Diskutiere mit anderen Quellen, Argumente, Herausforderungen und Fragestellungen. ",
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0" id="features">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Wie nachhaltig ist Künstliche Intelligenz?
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Finde es mit den Tools dieser Seite selbst heraus.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
