---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Kollaborative Literatursammlung",
    description:
      "Sammlung aktueller Veröffentlichungen zu KI, die für Fragen der Nachhaltigkeit relevant sind. Beitragen erwünscht.",
    icon: "bx:bxs-book",
  },
  {
    title: "SDG-KI-Explorer",
    description:
      "Zuordnung der Literatur zu den 17 Nachhaltigkeitszielen der UN",
    icon: "bx:bxs-file-find",
  },
  {
    title: "Diskussion",
    description:
      "Diskussionsmöglichkeit zu inhaltlichen und didaktischen Fragen auf jeder Seite.",
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Wie nachhaltig ist Künstliche Intelligenz?
  </h2>
  <p class="text-lg mt-4 text-slate-600">
   asdf 
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
